<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nathanwong.carboot"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="11" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light">
        <activity
            android:name=".CarBootInventoryActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".DetailActivity">
        </activity>
        
        <activity
            android:name=".RegisterActivity"
            android:label="@string/activity_register_name">
        </activity>
        
        <activity
            android:name=".NewItemActivity"
            android:label="@string/activity_newitem_name">
        </activity>
        
        <activity
            android:name=".LoginActivity"
            android:label="@string/activity_login_name">
        </activity>
        
    </application>

</manifest>